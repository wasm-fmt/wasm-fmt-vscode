{
	"name": "wasm-fmt",
	"displayName": "wasm fmt",
	"description": "Code Formatter powered by WebAssembly",
	"author": "magic-akari",
	"publisher": "wasm-fmt",
	"version": "0.3.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wasm-fmt/wasm-fmt-vscode.git"
	},
	"engines": {
		"vscode": "^2023.0.0"
	},
	"packageManager": "pnpm@8.9.2",
	"categories": [
		"Formatters"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onLanguage:c",
		"onLanguage:cpp",
		"onLanguage:csharp",
		"onLanguage:css",
		"onLanguage:go",
		"onLanguage:java",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onLanguage:less",
		"onLanguage:objective-c",
		"onLanguage:objective-cpp",
		"onLanguage:proto",
		"onLanguage:python",
		"onLanguage:sass",
		"onLanguage:scss",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:zig"
	],
	"browser": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "proto",
				"extensions": [
					".proto"
				]
			},
			{
				"id": "zig",
				"extensions": [
					".zig"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "./esbuild.mjs --minify",
		"compile": "./esbuild.mjs",
		"watch": "./esbuild.mjs --watch"
	},
	"devDependencies": {
		"@types/node": "^20.9.1",
		"@types/vscode": "^1.84.1",
		"esbuild": "^0.19.5"
	},
	"dependencies": {
		"@wasm-fmt/biome_fmt": "^0.1.0",
		"@wasm-fmt/clang-format": "^0.2.7",
		"@wasm-fmt/gofmt": "^0.4.6",
		"@wasm-fmt/ruff_fmt": "^0.5.0",
		"@wasm-fmt/zig_fmt": "^0.0.3",
		"malva": "^0.1.2"
	},
	"keywords": [
		"prettier",
		"formatter",
		"web",
		"wasm",
		"browser"
	]
}
